{
  "name": "pawspot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:web": "pnpm --filter pawspot-web dev",
    "start:api": "pnpm --filter pawspot-api start:dev",
    "start": "pnpm run start:web & pnpm run start:api",
    "build": "pnpm recursive run build",
    "test": "pnpm recursive run test",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres",
    "db:migrate": "pnpm --filter @pawspot/db prisma:migrate dev",
    "db:studio": "pnpm --filter @pawspot/db prisma:studio",
    "db:generate": "pnpm --filter @pawspot/db prisma:generate",
    "db:reset": "pnpm --filter @pawspot/db prisma:migrate reset"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.19.0",
  "dependencies": {
    "tailwindcss": "^4.1.14"
  },
  "pnpm": {
    "overrides": {
      "class-transformer": "0.4.1"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core"
    ]
  }
}