generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  USER
}

model User {
  id                  String      @id @default(cuid())
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  deletedAt           DateTime?
  email               String      @unique
  name                String?
  password            String
  sanctuaries         Sanctuary[] @relation("SanctuaryOwner")
  followedSanctuaries Sanctuary[] @relation("SanctuaryContributors")
  type                UserType    @default(USER)
  AuditLog            AuditLog[]
  Post                Post[]
}

model Sanctuary {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  name         String
  location     String
  ownerId      String
  owner        User      @relation("SanctuaryOwner", fields: [ownerId], references: [id])
  contributors User[]    @relation("SanctuaryContributors")
  qrCode       QrCode?
  animals      Animal[]
  Post         Post[]
}

model Animal {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  name        String
  species     String
  age         Int
  sanctuaryId String
  sanctuary   Sanctuary @relation(fields: [sanctuaryId], references: [id])
}

model QrCode {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  targetUrl   String
  imageUrl    String
  sanctuary   Sanctuary @relation(fields: [sanctuaryId], references: [id])
  sanctuaryId String    @unique
}

model AuditLog {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  action    String
  userId    String
  user      User      @relation(fields: [userId], references: [id])
}

model Post {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  title       String
  content     String
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  sanctuaryId String
  sanctuary   Sanctuary @relation(fields: [sanctuaryId], references: [id])
}
